def cf_request(method, endpoint, data=None):
    url = "https://api.cloudflare.com/client/v4/zones/%s/%s" % (ZONE_ID, endpoint)
    
    headers = {
        "Authorization": "Bearer %s" % API_TOKEN,
        "Content-Type": "application/json",
        "User-Agent": "Mozilla/5.0"
    }
    
    try:
        ctx = ssl.create_default_context()
        ctx.check_hostname = False
        ctx.verify_mode = ssl.CERT_NONE
        
        if method == "GET":
            req = urllib2.Request(url, headers=headers)
        elif method == "POST":
            req = urllib2.Request(url, json.dumps(data), headers=headers)
            req.get_method = lambda: 'POST'
        elif method == "DELETE":
            req = urllib2.Request(url, headers=headers)
            req.get_method = lambda: 'DELETE'
        else:
            return {"success": False, "errors": [{"message": "Method tidak didukung"}]}
        
        response = urllib2.urlopen(req, context=ctx)
        response_data = response.read()
        
        return json.loads(response_data)
        
    except urllib2.HTTPError as e:
        try:
            error_data = json.loads(e.read())
            return error_data
        except:
            return {"success": False, "errors": [{"message": "HTTP Error %s: %s" % (e.code, e.reason)}]}
    except urllib2.URLError as e:
        return {"success": False, "errors": [{"message": "URL Error: %s" % str(e.reason)}]}
    except Exception as e:
        return {"success": False, "errors": [{"message": "Error: %s" % str(e)}]}

