def get_all_records():
    result = cf_request("GET", "dns_records?type=A&per_page=100")
    
    if not result.get("success"):
        print(Colors.RED + "Gagal mengambil data dari Cloudflare!" + Colors.END)
        if result.get("errors"):
            for error in result.get("errors", []):
                print(Colors.RED + "  - " + str(error.get('message', 'Unknown error')) + Colors.END)
        return []
    
    records = result.get("result", [])
    
    all_records = []
    for record in records:
        if record["type"] == "A":
            all_records.append(record)
    
    return all_records

def menu_create():
