def main():
    global ZONE_ID, API_TOKEN, DOMAIN, SELECTED_DOMAIN, DOMAIN_STATUS
    
    clear_screen()
    show_banner()
    
    
    selected = show_domain_menu()
    if selected is None:
        menu_exit()
        return
    
    SELECTED_DOMAIN = selected
    ZONE_ID = selected["zone_id"]
    API_TOKEN = selected["api_token"]
    DOMAIN = selected["name"]
    
    clear_screen()
    show_banner()
    
    check_api_connection()
    
    press_enter()
    
    while True:
        try:
            clear_screen()
            show_banner()
            choice = show_menu()
            
            if choice == '1':
                menu_create()
            elif choice == '2':
                menu_list()
            elif choice == '3':
                menu_delete()
            elif choice == '4':
                if menu_change_domain():
                    continue
            elif choice == '0':
                menu_exit()
            else:
                
                print(Colors.RED + "Pilihan tidak valid! Silakan pilih 0-4." + Colors.END)
                press_enter()
                
        except KeyboardInterrupt:
            
            print(Colors.YELLOW + "Program dihentikan oleh pengguna." + Colors.END)
            sys.exit(0)
        except Exception as e:
            
            print(Colors.RED + "Terjadi kesalahan: %s" % str(e) + Colors.END)
            press_enter()

if __name__ == "__main__":
    main()
