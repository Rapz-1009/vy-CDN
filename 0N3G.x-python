    while True:
        host = raw_input(Colors.YELLOW + "> " + Colors.BOLD + "Masukkan nama subdomain : " + Colors.END).strip().lower()
        
        if host == "@":
            host = ""
            target_name = DOMAIN
            display_name = DOMAIN
        else:
            if not host:
                print(Colors.RED + "Nama subdomain tidak boleh kosong! Gunakan @ untuk root." + Colors.END)
                continue
            
            if not re.match(r'^[a-z0-9][a-z0-9.-]*[a-z0-9]$', host):
                print(Colors.RED + "Format hostname tidak valid!" + Colors.END)
                print(Colors.WHITE + "   Contoh: server1, api-test, cdn.mysite" + Colors.END)
                continue
            
            target_name = "%s.%s" % (host, DOMAIN)
            display_name = target_name
        
